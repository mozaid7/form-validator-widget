{
  "name": "form-validator-widget",
  "version": "2.1.5",
  "description": "Reusable React form validation widget with animations, debounce validation, checkbox groups, and TypeScript support.",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "build": "npm run clean && rollup -c",
    "prepublishOnly": "npm run build",
    "prepare": "npm run build",
    "dev": "rollup -c -w"
  },
  "keywords": [
    "react",
    "form-validation",
    "form-validator",
    "react-form",
    "validation-library",
    "typescript",
    "react-widget",
    "checkbox-group",
    "debounce-validation",
    "react-components"
  ],
  "author": "Syed Zaid",
  "license": "MIT",
  "peerDependencies": {
    "react": ">=18",
    "react-dom": ">=18"
  },
  "dependencies": {
    "tslib": "^2.8.1"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.0",
    "@rollup/plugin-node-resolve": "^15.0.0",
    "@rollup/plugin-typescript": "^11.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "postcss": "^8.5.6",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "rimraf": "^5.0.0",
    "rollup": "^3.29.0",
    "rollup-plugin-copy": "^3.5.0",
    "rollup-plugin-postcss": "^4.0.2",
    "typescript": "^5.4.0"
  },
  "sideEffects": false,
  "engines": {
    "node": ">=16"
  }
}
