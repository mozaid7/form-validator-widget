{
  "compilerOptions": {
    "target": "es5",
    
    "module": "esnext",
    
    "lib": ["dom", "esnext"],
    
    "jsx": "react",
    
    "declaration": true,
    
    "declarationDir": "dist",
    
    "strict": true,
    
    "moduleResolution": "node",
    
    "esModuleInterop": true,
    
    "skipLibCheck": true,
    
    "forceConsistentCasingInFileNames": true
  },
  
  "include": ["src", "src/styles/globals.d.ts"],
  
  "exclude": ["node_modules", "dist"]
}